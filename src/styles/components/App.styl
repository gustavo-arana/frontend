@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap');

margin 0
padding 0
box-sizing border-box

html
  font-size 62.5%

body
  background-color rgb(244,246,255)
  font-family 'Roboto', sans-serif
  color #434452
  font-size 1.0rem

h1
  font-size 1.8rem
  color #383b5e

h2
  font-size 1.2rem
  color #595b77

ul
  padding 0

ul > li
  list-style none
  margin-left 10px

#app
  width: 80%;
  max-width: 800px;
  margin: 0 auto;
  margin-top 30px
  padding 30px
  background-color #f1f3fd
  border-radius 20px
  box-shadow: 0px 5px 19px -12px rgba(0,0,0,0.75);